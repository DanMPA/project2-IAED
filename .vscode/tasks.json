{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C Compile",
            "command": "/usr/local/bin/gcc-11",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-Wall",
                "-Wextra",
                "-Werror",
                "-ansi",
                "-pedantic",
                "${fileWorkspaceFolder}/*.c",
                "-o",
                "${fileWorkspaceFolder}/proj2"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "Run Proj 1 Tests",
            "command": "make",
            "args": [
                "-C",
                "${fileWorkspaceFolder}/Tests/tests1"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "test",
            },
            "detail": "Run Tests."
            
        },
        {
            "type": "cppbuild",
            "label": "Run Proj 2 Tests",
            "command": "make",
            "args": [
                "-C",
                "${fileWorkspaceFolder}/Tests/tests2"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "test",
            },
            "detail": "Run Tests."
            
        },
        {
            "type": "cppbuild",
            "label": "Run Extencive Tests",
            "command": "make",
            "args": [
                "-C",
                "${fileWorkspaceFolder}/Tests/Extensive"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "test",
            },
            "detail": "Run Tests."
            
        }
    ],
    "version": "2.0.0"
}